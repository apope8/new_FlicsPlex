<h4 class="column">Featured Movies</h4>
<div class="column">
  <ul class="movies-grid no-bullet row">
    <% @movies.each do |movie| %>
      <li class="large-3 medium-4 small-12 column">
        <div class="movie-card padly">
          <%= link_to (image_tag movie.image_url, :class=>"poster",:style =>"height:250px"), movie %>"
          <div class="movie-info ell glassy-bg padmy padlx">
            <div class="title">
              <h4><%= movie.title %> <span>(<%= movie.release_year %>)</span></h4>
            </div>
            <p class="left price label movie-label radius">$ <%= movie.price %>
            <%= button_to 'Add to Cart', line_items_path(movie_id: movie),
              remote: true %>
              </p>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</div>
