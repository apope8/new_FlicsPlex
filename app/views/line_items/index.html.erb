<p id="notice"><%= notice %></p>

<h1>Line Items</h1>

 <div id="itemsContainer">
    <table id="customers">
        <% total = 0 %>
        <% @cart.each do |id, quantity| %>
        
        <% item = Item.find_by_id(id) %>
        
        <tr>
            <td>
                <div class="image">
                    <%= link_to (image_tag line_item.image_url, :style =>"height:40px"), item %>
                </div>
            </td>
            <td class="title"><%= link_to item.title, item %></td>
            <td><a href="#">Remove From Cart</a></td>
            <td class="price"><%= number_to_currency(item.price, :unit =>"€") %></td>
            <td class="quantity"><%= quantity %></td>
            <td class="price"><%= number_to_currency(quantity * item.price, :unit =>"€") %></td>
        </tr>
        <tr>
            <% total += quantity * item.price %>
          </tr>
         <% end %>
         <tr>
            Grang Total: <%= number_to_currency(total, :unit => "€") %>
          </tr>
    </table>
      </div>
              <% if session[:login] == 1 %> 
                <%= link_to 'Edit', edit_item_path(item), :class =>"button", :role=>"button" %>
                <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class =>"button", :role=>"button" %>
        
                <% end %>
  </tbody>
</table>

<br>

